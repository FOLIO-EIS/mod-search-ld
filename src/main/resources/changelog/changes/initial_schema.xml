<?xml version="1.1" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">
  <changeSet id="01_create_language_config_table" author="bohdan_suprun@epam.com">
    <createTable tableName="language_config">
      <column name="code" type="varchar(3)">
        <constraints primaryKey="true" nullable="false"/>
      </column>
    </createTable>
  </changeSet>

  <changeSet id="02_create_system_user_table" author="bohdan_suprun@epam.com">
    <createTable tableName="system_user">
      <column name="id" type="varchar(36)">
        <constraints primaryKey="true" nullable="false"/>
      </column>
      <column name="username" type="varchar(20)"/>
      <column name="okapi_url" type="varchar"/>
      <column name="tenant_id" type="varchar(50)"/>
    </createTable>
  </changeSet>
</databaseChangeLog>
