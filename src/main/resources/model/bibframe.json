{
  "name": "bibframe",
  "eventBodyJavaClass": "org.folio.search.domain.dto.Bibframe",
  "reindexSupported": true,
  "languageSourcePaths": [ "$.languages" ],
  "fieldTypes": {
    "suppress": {
      "searchTypes": [ "facet", "filter" ],
      "index": "bool",
      "default": false
    },
    "visibleSuppress": {
      "searchTypes": [ "facet", "filter" ],
      "index": "bool",
      "default": false,
      "showInResponse": [ "search" ]
    }
  },
  "fields": {
    "id": {
      "index": "keyword",
      "showInResponse": [ "search" ]
    },
    "titles": {
      "type": "object",
      "properties": {
        "value": {
          "searchAliases": [ "keyword" ],
          "index": "whitespace"
        },
        "type": {
          "index": "whitespace"
        }
      }
    },
    "identifiers": {
      "type": "object",
      "properties": {
        "value": {
          "searchAliases": [ "keyword" ],
          "index": "whitespace"
        },
        "type": {
          "index": "keyword"
        }
      }
    },
    "contributors": {
      "type": "object",
      "properties": {
        "value": {
          "searchAliases": [ "keyword" ],
          "index": "whitespace"
        },
        "type": {
          "index": "whitespace"
        }
      }
    },
    "publications": {
      "type": "object",
      "properties": {
        "publisher": {
          "searchAliases": [ "publisher" ],
          "index": "multilang",
          "showInResponse": [ "search" ]
        },
        "dateOfPublication": {
          "index": "date",
          "showInResponse": [ "search" ]
        }
      }
    },
    "editionStatement": {
      "searchTypes": "sort",
      "searchAliases": [ "editionStatement", "keyword" ],
      "index": "multilang",
      "showInResponse": [ "search" ]
    }
  },
  "searchFields": {
    "isbn": {
      "type": "search",
      "processor": "bibframeIsbnProcessor",
      "searchTermProcessor": "bibframeIsbnSearchTermProcessor",
      "index": "standard",
      "indexPlainValue": false
    },
    "lccn": {
      "type": "search",
      "index": "standard",
      "processor": "bibframeLccnProcessor"
    },
    "title": {
      "type": "search",
      "index": "multilang",
      "processor": "bibframeTitleProcessor"
    },
    "contributor": {
      "type": "search",
      "index": "multilang",
      "processor": "bibframeContributorProcessor"
    }
  },
  "indexMappings": { }
}
